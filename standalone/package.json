{
  "name": "editor-artigos-servidor-integrado",
  "version": "1.1.0",
  "description": "Editor de Artigos - Aplicativo Desktop com Servidor Backend Integrado",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux",
    "dist": "npm run build-all"
  },
  "build": {
    "appId": "com.liberdademedica.editor-artigos-servidor",
    "productName": "Editor de Artigos - Blog Liberdade Médica",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.md",
      "!test-*.js",
      "!build-*.bat"
    ],
    "extraResources": [
      {
        "from": "README-FINAL.md",
        "to": "README.md"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "portable": {
      "artifactName": "EditorArtigos-Servidor-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "EditorArtigos-Installer-${version}.exe",
      "shortcutName": "Editor de Artigos",
      "uninstallDisplayName": "Editor de Artigos - Blog Liberdade Médica"
    }
  },
  "keywords": [
    "blog",
    "editor",
    "artigos",
    "medicina",
    "desktop",
    "postgresql",
    "servidor",
    "backend"
  ],
  "author": "Liberdade Médica",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  }
}
